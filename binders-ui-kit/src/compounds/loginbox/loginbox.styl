@require "../../vars.styl";

.login-box
    width: 320px
    background-color: lightGreyColor
    box-shadow: 0 3px 3px 0 rgba(0, 0, 0, 0.2)
    border-radius: 5px
    display: flex
    flex-direction: column
    align-items: center
    font-size: 14px
    font-family: defaultFontName
    padding-bottom: 10px
    &-header
        display: block
        font-size: 24px
        font-weight: bold
        font-family: logoFontName
        margin: 36px 0
    .input-wrapper
        width: 85%
        display: flex
        margin-bottom: 15px
        .input
            flex-grow: 1
    .button--CTA
        color: grey900
        box-sizing: border-box
        margin: 20px 0
        width: 85%
    &-errors
        color: colorErrorDark
        text-align: center
        width: 85%
        label
            display: block
    &--containserrors
        .login-box-header
            margin: 36px 0 20px
        .login-box-errors
            margin-bottom: 30px
        .input
            border: 1px solid colorErrorDark


    &-sso
        display: flex
        flex-direction: column
        width: 100%
        align-items: center
        margin: 20px 0

    &-separator
        height: 1px
        width: 50%
        background-color: middleGreyColor
        display: flex
        justify-content: center
        align-items: center

        span
            background-color: lightGreyColor
            padding: 0 8px

    .identity-provider
        display: flex
        flex-direction: column
        width: 85%
        border-radius: 4px
        border: 1px solid grey800
        background-color: white

        &:hover
            box-shadow: 0 2px 3px 0 rgba(0,0,0,0.35)

        a
            display: flex
            justify-content: center
            column-gap: 8px
            align-items: center
            text-decoration: none

            span
                color: grey800
                font-weight: 500
                font-family: defaultFontName
                font-size: 14px
                line-height: 22px
                margin: 7px 0

        &-logo
            width: 24px
            height: 24px
