@require "~@binders/ui-kit/lib/vars.styl";

.cookieBanner
    position: fixed
    left: 0
    bottom: 0
    width: 100%

    background-color: black
    z-index: 10000

    &-content
        margin: 0 auto
        box-sizing: border-box
        padding: 20px
        max-width: 800px
        display: flex
        flex-flow: row nowrap
        align-items: center

        @media rwd.mobile
            flex-direction: column
            align-items: flex-start
    
    &-explanation
        color: white
        margin-right: 30px

    &-title
        font-size: 1.5rem

    &-description
        font-size: 1rem
        line-height: 1.3

    &-buttons
        display: flex
        flex-flow: column nowrap

        @media rwd.mobile
            flex-direction: row

    &-button
        background-color: white
        border: none
        outline: none
        padding: 7px 25px
        border-radius: 3px
        cursor: pointer

        &:hover
            background-color: #e6e6e6

        &:not(:last-child)
            margin-bottom: 5px
            @media rwd.mobile
                margin-bottom: 0
                margin-right: 5px
