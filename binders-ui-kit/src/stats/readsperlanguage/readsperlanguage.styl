@import "../../vars.styl";

.reads-per-language-stat
    > svg, > div
        min-width: 310px
    &-header
        margin-bottom: 60px
    &.show-legend
        display: flex
        &>div
            width: 50% !important
    &--empty
        width: 100%
        height: 240px
        p
            width: 100%
            text-align: center
            line-height: 240px
    .piechart-legend-wrapper
        display: flex
        flex-direction: column
        h2
            line-height: 2em
            padding: 20px 0px 20px 8px
        .piechart-legend
            margin-left: 8px
            li
                min-width 120px
            .color
                height: 1em
                width: 2em
                border: 1px solid #ccc
                display: inline-block
                margin-right: 8px
            span
                font-size: small
                &.machine-translation
                    color: lighten(baseColor, 20%)