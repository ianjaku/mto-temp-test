@require "../../vars.styl"

.navbar
    width: 240px
    position: fixed
    height: 100%
    background-color: backgroundColor
    color: baseColor
    font-family: defaultFontName, "medium"
    display: flex
    flex-direction: column
    &-logo
        display: flex
        justify-content: center
        align-items: center
        padding: 0
        padding-top: 25px
        flex-shrink: 0
        @media rwd.mobile
            display: none
        .thumbnail-outer-wrapper
            border-radius: 8px
            overflow: hidden
    &-main
        flex-grow: 1
        display: flex
        flex-direction: column
        @media rwd.mobile
            overflow: auto
        &-navigation
            &-list
                display: flex
                flex-direction: column
                margin: 0
                padding: 25px
                gap: 8px
                &-item, &-button
                    display: flex
                    align-items: center
                    cursor: pointer
                    border-radius: 4px
                    transition: background-color 150ms ease-in
                    .myLibrary-addNew-contextMenu
                        top: 120px
                        left: 120px
                    &-icon
                        color: grey60 !important
                        width: 18px !important
                        height: 18px !important
                        cursor: pointer
                        &.MuiSvgIcon-root
                            transition: color 150ms ease-in
                    &-label
                        line-height: 18px
                        margin-left: 12px
                        cursor: pointer
                    &-link
                        display: flex
                        width: 100%
                        padding: 12px
                        cursor: pointer
                        color: grey700
                        font-size: 15px
                        font-weight: 400
                        align-items: center
                        text-decoration: none
                        border-radius: 4px
                        transition: color 150ms ease-in

                        &.is-active
                            background-color: accent300
                            font-weight: 500
                            & ^[4]-icon, & ^[4]-label
                                color: grey900 !important
                    &:hover
                        background-color: accent200
                        & ^[4]-icon, & ^[4]-label
                            color: grey900 !important
                &-button
                    background-color: accentColor
                    font-family: defaultFontName, "medium"
                    color: grey900
                    margin-bottom: 12px
                    border: none
                    &-icon
                        color: grey900 !important
                    &-link
                        font-weight: 500
                        color: grey900
                &-button:hover
                    background-color: accentHoverColor
                .navbar-create-button
                    display: flex
                    align-items: center
                    justify-content: center
                    border-radius: 100vw
                    gap: 6px
                    border: 1px solid middleGreyColor
                    background: none
                    color: grey900
                    font-weight: bold
                    font-size: 15px
                    padding: 12px 6px
                    margin: 0 12px
                    margin-bottom: 16px
                    cursor: pointer
                    line-height: 1
                    transition: background-color 150ms ease-in
                    &-label
                        color: grey900
                    &:hover
                        background-color: middleGreyColor
                    .MuiSvgIcon-root
                        font-size: 15px
                    &--disabled
                        color: middleGreyColor
                        cursor: not-allowed
                        &:hover
                            background-color: transparent

        &-bottomsection
            flex-grow: 1
            display: flex
            flex-direction: column
            justify-content: flex-end
            .navbar-main-navigation-list
                border-top: 1px solid middleGreyColor
    &-left
        border-right: 1px solid middleGreyColor
        @media rwd.materialMobile
            height: "calc(100% - %s)" % mobileNavbarHeight
        .navbar-outside-click
            position: absolute
            left: 100%
            width: calc(100vw - 240px)
            height: 100vh
