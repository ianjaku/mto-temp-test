@require "../../vars.styl"
@require "../../style/global.styl"

.flashmessage
    font-family: defaultFontName, sans-serif
    position: fixed
    display: flex
    bottom: 16px
    right: 16px
    z-index: 2147483004
    visibility: hidden
    transform: translate3d(0, 80px, 0)
    transition: transform 400ms cubic-bezier(0.23, 1, 0.32, 1) 0ms, visibility 400ms cubic-bezier(0.23, 1, 0.32, 1) 0ms
    max-width: 700px
    min-width: 450px
    min-height: 54px
    padding-right: 10px
    border-radius: 5px
    color: baseColor
    @media rwd.mobile
        right: 0px
        bottom: 0px
        width: 100%
        border-radius: 0px
        min-width: inherit
        max-width: inherit
    &.success
        background-color: colorOkLight
        border: 1px solid colorOk
        .icon
            background-color: colorOk
    &.info
        background-color: colorInfoLight
        border: 1px solid colorInfo
        .icon
            background-color: colorInfo
    &.error
        background-color: colorErrorLight
        border: 1px solid colorError
        .icon
            background-color: colorError
    &.open
        visibility: visible
        transform: translate3d(0, 0, 0)
    .icon
        width: 54px
        color: whiteColor
        border-radius: 5px 0 0 5px
        text-align: center
        position: absolute
        height: 100%
        display: flex
        align-items: center
        justify-content: center
        left: 0
        @media rwd.mobile
            border-radius: initial
        .material-icons
            line-height: 100%
            font-size: 32px !important
            color: whiteColor !important
    >.close
        font-size: 18px
        position: absolute
        right: 10px
        top: 0
        margin-top: 10px
        margin-left: 10px
        cursor: pointer
        font-weight: 600
        align-self: flex-start
    .message
        font-weight: 500
        font-size: 14px
        margin-left: 70px
        margin-right: 30px
        display: flex
        align-items: center
        min-height: 54px
        padding-top: 10px
        padding-bottom: 10px
