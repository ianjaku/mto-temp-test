@require "../../vars.styl";
@require "../../style/global.styl";
json("./vars.json");

.drawer
    .drawer-container
        background-color: baseColor
        right: -410px !important
        transition: right .2s ease-in !important
        color: white
        padding: 32px 16px
    &.is-opened
        .drawer-container
            right: 40px !important
            overflow: visible
            transform: none
            width: drawerWidth px
    &-container
        box-shadow: inset -5px 0 30px 0 rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.16) 0px 3px 10px, rgba(0, 0, 0, 0.23) 0px 3px 10px !important
        display: flex
        flex-direction: column
        &-header
            padding-bottom: 16px
            &-title
                font-size: 26px
                font-weight: 300
            &-icon
                float: right
        &-body
            flex-grow: 1
            overflow-y: auto
            overflow-x: hidden
            &:hover
                &::-webkit-scrollbar-thumb
                    background-color: accentColor
            &::-webkit-scrollbar
                z-index: 100
                width: 5px
                background-color: baseColor
            &::-webkit-scrollbar-track
                z-index: 101
                box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3)
            &::-webkit-scrollbar-thumb
                z-index: 102
                outline: 1px solid grey60
                background-color: grey700
                transition: all 150ms ease-in
