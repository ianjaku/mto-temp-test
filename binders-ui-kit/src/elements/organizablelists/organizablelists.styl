@require "../../vars.styl"

.organizable-lists
    width: 100%
    border: 1px solid borderGrayColor
    font-family: secondaryFontName
    background-color: lightGreyColor
    color: baseColor
    .modal
        &-body
            min-width: 600px
            min-height: 470px
    &-header
        font-weight: bold
        font-size: 12px
        border-bottom: 1px solid borderGrayColor
        &-column
            width: 50%
            height: 40px
            display: inline-flex
            align-items: center
            justify-content: space-between
            padding: 17px
            &:first-child
                border-right: 1px solid borderGrayColor
            &-button
                .button
                    padding: .75em 1.25em;
    &-body
        display: flex
        height: 100%
        &-column
            display: inline-flex
            width: 50%
            position: relative
            max-height: 345px
            overflow-y: auto
            &-dropmessage
                position: absolute
                z-index: 3
                text-align: center
                width: 100%
                color: accentColor
                top: 50%
                display: none
                pointer-events: none
            &.drop-active
                outline: 1px solid accentColor
                .organizable-lists-body-column-list:after
                    position: absolute
                    top: 0
                    left: 0
                    content: ""
                    width: 100%
                    height: 100%
                    background-color: rgba(255, 255, 255, 0.8)
                    z-index: 2
                    pointer-events: none
                .organizable-lists-body-column-dropmessage
                    display: block
            &:first-child
                border-right: 1px solid borderGrayColor
            &-wrapper
                position: absolute
                width: 100%
                height: 100%
                background-color:rgba(255, 255, 255, 0.8)
                z-index: 2
            &-list
                width: 100%
                margin: 9px
                .input-wrapper
                    margin-bottom: 1em
                    >input
                        width: 100%
                &-item
                    font-family: defaultFontName
                    font-size: 11px
                    height: 32px
                    line-height: 32px
                    padding-left: 10px
                    box-sizing: border-box
                    border-top: 1px solid borderGrayColor
                    border-left: 1px solid borderGrayColor
                    border-right: 1px solid borderGrayColor
                    margin-top: -1px
                    z-index: 1
                    position: relative
                    cursor: pointer
                    background-color: whiteColor
                    &:after
                        content: ""
                        height: 1px
                        width: 100%
                        background-color: borderGrayColor
                        display: block
                        position: absolute
                        bottom: 0px
                        left: 0
                    &:hover
                        border-color: accentColor
                        z-index: 2
                    &:hover:after
                        background-color: accentColor

