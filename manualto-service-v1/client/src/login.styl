.login-form
    margin-top: 24px

.identity-provider
    display: flex
    flex-direction: column
    border-radius: 4px
    border: 1px solid #484744
    background-color: white
    transition: all 0.3s ease
    margin-bottom: 24px

    &:hover
        box-shadow: 0 2px 3px 0 rgba(0,0,0,0.35)

    a
        display: flex
        justify-content: center
        column-gap: 8px
        align-items: center
        text-decoration: none

        span
            color: #484744
            font-weight: 500
            font-size: 14px
            line-height: 22px
            margin: 11px 0

    &-logo
        width: 24px
        height: 24px

.login-box-separator
    &-wrapper
        width: 100%
        display: flex
        justify-content: center
        align-items: center

        span
            font-weight: 500
            font-size: 14px
            line-height: 22px
            padding: 0 8px
            color: grey400
            user-select: none