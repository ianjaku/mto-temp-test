@import "./mixins.styl"
@import "./vars.styl"

actionsColor=$$bgDark

body {
    margin: 0;
    height: 100%;
    background-color: $$bgMedium;
    font-family: $$systemFont;
}


.linkStyle
    text-decoration: none
    hover: pointer
    color: $$bgDark


input:focus {
    outline: none;
}


.login-form-resetPassword
    display: block;
    padding-top: 16px;

    a
        text-decoration: none
        color: grey800
        font-weight: 500
        font-size: 14px

.login-page {
    width: 360px;
    padding: 8% 0 0;
    margin: auto;
}

.form {
    position: relative;
    z-index: 1;
    background: grey50;
    border-radius: 12px;
    margin: 0 auto 100px;
    padding: 36px 45px;
    text-align: center;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
}

.form input, select {
    font-family: $$systemFont;
    outline: 0;
    background: grey50;
    width: 100%;
    border: 1px solid grey400;
    border-radius: 4px;
    margin: 0 0 15px;
    padding: 8px 15px;
    box-sizing: border-box;
    font-size: 14px;
    line-height: 22px;
}

.form button {
    font-family: $$systemFont;
    outline: 0;
    background: brand800;
    width: 100%;
    border: 0;
    padding: 13px;
    color: grey900;
    border-radius: 4px;
    font-size: 16px;
    transition: all 0.3s ease;
    cursor: pointer;
}

.form button:hover,
.form button:active,
.form button:focus {
    box-shadow: 0 2px 3px 0 rgba(0,0,0,0.35);
}

.form .message {
    margin: 15px 0 0;
    color: #b3b3b3;
    font-size: 12px;
}

.form .message a {
    color: #4CAF50;
    text-decoration: none;
}

.form .register-form {
    display: none;
}

.container {
    position: relative;
    z-index: 1;

    margin: 0 auto;
}

.container:before,
.container:after {
    content: "";
    display: block;
    clear: both;
}

.container .info {
    margin: 50px auto;
    text-align: center;
}

.container .info h1 {
    margin: 0 0 15px;
    padding: 0;
    font-size: 36px;
    font-weight: 300;
    color: #1a1a1a;
}

.container .info span {
    color: #4d4d4d;
    font-size: 12px;
}

.container .info span a {
    color: #000000;
    text-decoration: none;
}

.errors {
    color: #f00;
    margin: 10px 0;
    word-wrap: break-word;
}

.container .info span .fa {
    color: #EF3B3A;
}

body {
    background: $$bgMedium;
    /* fallback for old browsers */
    font-family: $$systemFont;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

.subdomain {
    color: brand800;
    word-break: break-word
}

.form-title {
    font-size: 1.2em;
    padding-bottom: 36px;
    cursor: default;
}

.signup-instruction {
    font-size: 0.8rem
}

.signup-instruction-inputlabel {
    text-align: left;
    margin-bottom: 8px
}

.signup-tologin {
    margin-top: 10px
    font-size: 0.8rem
}

.signup-form {
    margin-top: 10px
}

.form .signup
    text-align: center
    padding-top: 8px
    font-size: 0.9em

    a
        @extends .linkStyle

// TODO: to be deleted when we can use ui kit on login page -- start
.ribbons
    position: fixed
    bottom: 0
    left: 0
    width: 100%
    z-index: 1500


.infoBanner
    position: relative
    font-family: $$systemFont
    z-index: 1500
    bottom: 0
    left: auto
    right: auto
    width: 100%
    border-top: solid 1px transparent
    background-color: rgba(72, 71, 68, 0.66)
    border-bottom: 1px solid white

    &-wrapper
        margin: 0 auto
        max-width: 90%
        text-align: center
        @media (max-width: 767px)
            max-width: 100%
            padding: 0 5%
        @media (max-width: 479px)
            padding 0 8% 0 2%

    &-message
        display: inline-block
        margin: 10px 0
        font-size: 14px
        font-weight: bold
        line-height: 1.35
        color: white
        @media (max-width: 1199px)
            text-align: left
        @media (max-width: 767px)
            font-size: 15px


    &-learnMore
        display: inline-block
        position relative
        top: -1px
        font-weight: bold
        color: actionsColor
        cursor: pointer
        text-decoration: none
        margin-left: 8px
        @media (max-width: 767px)
            font-size: 14px
        &:hover
            text-decoration: underline




