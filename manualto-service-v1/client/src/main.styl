@import "./mixins.styl"
@import "./vars.styl";
@import "./global.css";
@import "./tailwind.bridge.css";

html {
    -webkit-text-size-adjust: 100%;
}

html,body{
    margin:0;
    padding:0;
}

body{
    font-family: $$systemFont;
    background: $$bgMedium;
}

h1, h2, h3, h4, h5, h6{
    font-family: $$titleFont;
}

input {
    font-family: inherit;
}

i.icon {
    display: inline-block;
}

mark {
    background-color: btnPrimary;
}

ul li, ol li
    margin-top: 1em
    margin-bottom: 1em

// to make lists the same as in the editor
ol
    counter-reset: item
ol > li
    display: list-item
    margin-left: 1em
    counter-increment: item
ol > li::marker
    content: counters(item, ".") ". "
    margin-left: -1em;

.chunk-content
    ul > li { list-style: disc }
    ul > li > ul > li { list-style: circle }
    ul > li > ul > li > ul > li { list-style: square }

// to make ordered lists properly aligned when we add counters
// (we expect max 5 stages of nesting, later margins can be a little off)

prepareOlStyles(nestingStage)
    if nestingStage <= 5
        ol
            padding-inline-start: nestingStage * 1em
            li:before
                margin-left: nestingStage * -1em
            prepareOlStyles(nestingStage+1)

.chunk-html div
    prepareOlStyles(1);

.right-to-left
    ol
        li
            &:before
                margin-left: 0

.reader-component
    &-errorbox-wrapper
        height: 100vh
        display: flex
        align-items: center
        justify-content: center
    &-errorbox
        text-align: center
        &-title
            font-family: $$titleFont
            font-size: 20px
            font-weight: bold
            text-align: center
        &-description
            font-family: $$systemFont
        >p
            font-weight: bold
        .brandedbutton
            display: inline-block
            margin: 16px

.brandedbutton
    color: lightBackground
    background-color: $$bgDark
    padding: 10px 25px
    text-align: center
    min-width: 150px
    font-size: 14px
    cursor: pointer
    font-weight: bold



.invite-form-wrapper
    display: flex
    justify-content: center
    align-items: center
    width: 100%
    height: 100vh

.material-icons
    font-feature-settings: "liga" 1

