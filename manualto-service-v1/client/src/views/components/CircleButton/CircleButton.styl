@import "../../../vars.styl"

.circlebutton
    display: flex
    align-items: center
    justify-content: center
    font-weight: bold
    font-size: 1rem
    margin-left: 5px
    margin-bottom: 5px
    width: circleDimension px
    height: circleDimension px
    padding: 7px
    float: left
    border-radius: 100%
    border: 1px solid #646666
    background-color: white
    transition: opacity 0.2s linear
    opacity: 1
    cursor: pointer
    position: relative
    &-inner-wrapper
        display: flex
        flex-direction: column
        align-items: center
    &-inner
        cursor: pointer
        color: #646666
        fill: #646666
        &--text
            text-transform: uppercase
        &-mainvalue
            position: absolute
            top: 0.3rem
        &-subvalue
            font-size: 0.6em
            position: absolute
            top: 1.4rem
        &-mainValueSmall
            font-size: 0.6em
    &.language-code-button
        text-transform: uppercase
    &:hover
        opacity: .8
    &--isSelected
        background-color: #646666
        cursor: default
        opacity: 1.0
        border: 1px solid #646666
        .circlebutton-inner
            color: white
    &.with-translate-icon .circlebutton-inner
        background-repeat: no-repeat
        background-image: url("~assets/icon-translation.svg")
        width: 1.25rem
        height: 1.25rem
        opacity: 0.65
