@import "../../../../vars.styl"

.passwordModal
    width: 100%
    padding: 65px 40px
    box-sizing: border-box
    display: flex
    flex-direction: column
    justify-content: center
    &-user
        padding-bottom: 32px
        display: flex
        align-items: center
        justify-content: center
        flex-flow: column nowrap
        gap: 12px
        &-name
            font-size: 16px
            font-weight: 500
            line-height: 1.185
            color: baseColor

    &-label
        font-size: 13px
        font-weight: 500
        line-height: 1.185
        color: baseColor
        padding-bottom: 10px
    &-inputWrapper
        position: relative
    &-input
        width: 100%
        box-sizing: border-box
    &-error
        font-size: 12px
        line-height: 1
        color: colorErrorDark
        text-align: right
        position: absolute
        top: -15px
        right: 0
        width: 100%
        height: 15px
    &-info
        color: middleGreyColor3
        font-size: 12px
        font-weight: 400
        display: flex
        align-items: center
        gap: 3px
        line-height: 1.15
        padding-top: 8px
        padding-bottom: 10px
        overflow-wrap: normal
        max-width: 320px
    &-buttons
        display: flex
        gap: 10px
        padding-top: 20px
        justify-content: center

