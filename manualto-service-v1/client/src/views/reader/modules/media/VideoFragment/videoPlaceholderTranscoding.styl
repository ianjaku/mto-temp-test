.video-placeholder-transcoding
    position: relative
    width: 100%
    height: 100%
    &-label
        color: #FFFFFF
        text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000
        position: absolute
        left: calc(50% - 132px)
        top: 50%
        z-index: 50
    &-backdrop
        display: flex
        align-items: center
        justify-content: center
        width: 100%
        height: 100%
        background-size: 100% 100%
        color: #ffffff
        filter: blur(8px)


