@import "../../../../vars.styl";

.media-module-tailslot
    --tailSlotHeight: 100px
    position: fixed
    height: var(--tailSlotHeight)
    top: calc(100vw - var(--tailSlotHeight) / 2)
    left: 0
    display: flex
    align-items: center
    z-index: 1000

.media-module
    overflow: hidden
    line-height: 0
    flex: 3
    background-color: rgba(0, 0, 0, 0.03)
    max-height: 100vw
    z-index: 10
    position: fixed
    top: 0
    left: 0
    .image-wrapper
        text-align: center
        max-height: 100%
        max-width: 100%
        width: 100%
        height: 100%
        display: flex
        align-items: center
        justify-content: center
        overflow: hidden
        flex-direction: row
        position: relative;

        img
            color: transparent;
        .phImg-wrapper
            width: 100%
            height: 100%
            transition: opacity .2s linear
            position: absolute
            top: 0
            left: 0
        .phImgBlur
            filter: blur(15px)
        .video-wrapper
            .event-catcher
                z-index : 1
                position: absolute
                top: 0
                left: 0
                width: 100%
                height: 100%
                display: flex
                align-items: center
                justify-content: center
            .loader
                display: block
                position: absolute
                left: calc(50% - 20px)
                top: calc(50% - 40px)
            .android-data-saver-tip
                color: #fff
                background-color: darkGrayColor
                opacity: 0.7
                padding: 10px
                display: block
                position: absolute
                width: 100%
                bottom: 0
                line-height: 1.5em
                a
                    color: #fff
            &:focus
                outline: none
        .video-js
            background-color: transparent
            .vjs-big-play-button
                top: calc(50% - 1.5em)
                left: calc(50% - 1.5em)
                height: 3em
                border-radius: 3em
                line-height: 3em
                border: 0
        .vjs-poster
            background-size: 100% 100%
            background-color: transparent

        .vjs-control-bar, .vjs-modal-dialog.vjs-text-track-settings
            display: none !important
        .vjs-tech
            &:focus
                outline: none
        //https://github.com/videojs/video.js/issues/2677
        .vjs-has-started .vjs-loading-spinner
            display: none !important
.media-viewport
    position: relative
    transition: top 150ms ease-out
    max-height: 100%
    min-height: 100%
    height: 100%
    background-color: lightBackground

.image
    &.fillVertical
        height: 100%
        width: auto
        flex-shrink: 0
        min-width: 1px
    &.fillHorizontal
        width: 100%
        height: auto
        min-height: 1px /* IE hack, otherwise image is stretched */

.carousel-arrow-button
    border: 0
    background: transparent
    color: #000000
    text-shadow: -1px -1px 0 rgba(255,255,255,0.6),
            1px -1px 0 rgba(255,255,255,0.6),
            -1px  1px 0 rgba(255,255,255,0.6),
            1px  1px 0 rgba(255,255,255,0.6)
    outline: 0
    padding: 10px
    opacity: 1
    cursor: pointer
    font-size: 24px
    font-weight: bold
    &:focus
        outline: none
    &.disabled
        opacity: 0.1
    .icon-home-wrapper
        width: 40px
        height: 40px
        border-radius: 40px
        border: 1px solid mediumGrayColor
        background-color:  rgba(255, 255, 255, 0.85)
        display: flex
        justify-content: center
        align-items: center
        outline: none
        .carousel-arrow
            width: 11px
            height: 20px
            background-repeat: no-repeat
            position: relative;
            top: 2px;
            &-left
                background-image: url("~assets/icon-caret-left.svg")
                margin-right: 2px
            &-right
                background-image: url("~assets/icon-caret-right.svg")
                margin-left: 2px
.carousel-dots-list
    position: relative
    margin: 0
    top: -10px
    padding: 0

.carousel-dot-item
    list-style-type:none
    display: inline-block
    vertical-align: middle
    margin: 0px 5px
    width: 4px
    height: 4px

.carousel-dot-button
    border: 3px solid #FFF
    background: black
    cursor: pointer
    outline: 0
    opacity: 0.5
    border-radius: 50%
    box-shadow: 1px 1px 1px 0px #000
    width: 3px
    height: 3px
    padding: 0
    &.active
        opacity: 1

    padding: 0

    @media landscapeQ
        margin: 2vh
        width: 1vh
        height: 1vh

    @media portraitQ
        margin: 2vw
        width: 1vw
        height: 1vw


.slider
    max-height: 100%
    max-width: 100%
    width: 100% !important
    height: 100% !important

.slider-frame
    max-height: 100%
    max-width: 100%
    width: 100%
    height: 100% !important

.rounded-shadow
    position: relative
    box-shadow: 0 0 5vh rgba(0, 0, 0, 0.35), 0 0 0 3px rgba(0, 0, 0, 0.1)
    width: 85vw
    height: 3vw
    border-radius: 100%
    z-index: 999
    margin: 0 auto

@media only screen and (orientation: portrait)
    .media-module
        width: 100vw
        height: 100vw
        max-height: 66vh
@media only screen and (orientation: landscape)
    .media-module
        width: 100vh
        max-width: 66vw
        height: 100vh
        overflow: hidden
        line-height: 0
        flex: 2
        flex-shrink: 1
        background-color: rgba(0,0,0,.03)
        .image-wrapper
            height: 100vh

    .rounded-shadow
        width: 3vh
        height: 80vh
        border-radius: 100%
        top: -90vh
        margin: 0
        right: -100%

.slider-list
    max-height: 100%
    height: 100% !important

.slider-slide
    align-items: center
    max-height: 100%
    max-width: 100%
    height: 100% !important

    & > img
        height: 100%
        width: 100%
        display: block

.slider-decorator-2
    width: 100%

/* react-quick-pinch-zoom */
.kvfysmfp
    width: 100%
    height: 100%
