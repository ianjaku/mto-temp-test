@require "~@binders/ui-kit/lib/vars.styl";
@import "../../../../vars.styl";

.comment
    &-item
        box-sizing: border-box
        padding: 15px 8px
        margin-left: 4px
        cursor: pointer
        transition: box-shadow 0.2s ease-out
        position: relative
        &:after
            content: ''
            position: absolute
            width: calc(100% - 16px)
            height: 1px
            bottom: 0
            background: grayBorder
        &:last-child
            &:after
                background: none
        &-content-wrapper
            display: flex
            flex-direction: column
            gap: 12px
        &-content-top
            position: relative
            display: flex
            flex-direction: row
            justify-content: space-between
            height: 20px
            margin-right: 16px

            &-left
                display: flex
                align-items: center
                column-gap: 4px
                color: grey500
                font-size: 12px
                line-height: 1.3
                font-weight: 400

            &-right
                display: flex
                align-items: center
                column-gap: 6px

    &-body
        font-size: 13px
        line-height: 1.3
        font-weight: 400
        color: baseColor
        margin: 0
        // Necessary to use multi-line comments (html by default removes newlines)
        white-space: pre-line
        overflow: hidden
        text-overflow: ellipsis
        width: 85%

        .comment-edited-label
            color: grey500
            font-size: 11px
            font-weight: 400

    &-time--selected
        color: grey700

    &-attachments
        display flex
        flex-wrap: wrap
        gap: 10px
        padding-top: 4px

        .thumbnail-wrapper
            border: 1px solid borderGrayColor
            border-radius: 8px

        .progress-overlay-bar
            border-radius: 8px
