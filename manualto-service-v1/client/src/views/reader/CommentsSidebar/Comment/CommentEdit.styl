@require "~@binders/ui-kit/lib/vars.styl";
@import "../../../../vars.styl";

.commentEdit
    border-top: 1px solid grayBorder
    box-sizing: border-box
    padding: 30px 12px 16px
    position: relative

    @media rwd.mobile
        padding 8px 12px
        border-top: unset

    &-textareaWrapper
        background-color: backgroundColor
        border-radius: 4px
        border: 1px solid grayBorder

    &-actions
        display: flex
        flex-direction: row
        justify-content: space-between
        margin-top: 8px

        &-attach
            display: flex
            justify-content: center
            align-content: center
            flex-wrap: wrap
            line-height: 1.2
            color: baseColor
            &-text
                font-size: 13px
                margin: auto
                color: grey700
                font-weight: 500
            &-label
                display: inherit
                gap: 4px
                &:hover
                    text-decoration: underline
            &:not(.commentEdit-actions-attach--disabled)
                *
                    cursor: pointer

        &-buttons
            display: flex
            column-gap: 4px
            .button
                padding: 10px 20px
                border: unset
                margin: 0

    &-inputWrapper
        position relative
        display: flex
        flex-direction: column

    &-input
        background-color: transparent
        padding: 8px 12px
        outline: none
        border: none
        width: 100%
        max-width: 100%
        min-width: 100%
        box-sizing: border-box
        color: baseColor
        font-size: 13px
        line-height: 1.3
        font-family: "Rubik"
        transition: all 0.1s ease-out;
        height: 80px
        resize: none
    &-icon
        display: flex
        justify-content: center
        align-content: center
        flex-wrap: wrap
        line-height: 1.2
        color: baseColor
        &-text
            font-size: 13px
            margin: auto
            color: grey700
            font-weight: 500
        &:not(.commentInput-icon--disabled)
            *
                cursor: pointer
    &-attach
        display: inherit
        gap: 4px
        &:hover
            text-decoration: underline
    &-loading
        display: flex
        justify-content: flex-end
        position: absolute
        bottom: 8px
        right: 8px
