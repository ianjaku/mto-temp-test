@require "~@binders/ui-kit/lib/vars.styl";
@import "../../../../vars.styl";

.commentInput
    border-top: 1px solid grayBorder
    box-sizing: border-box
    padding: 30px 12px 16px
    position: relative

    @media rwd.mobile
        padding: 8px 12px
        padding-top: 0px
        border-top: unset

    &-textareaWrapper
        background-color: backgroundColor
        border-radius: 4px
        border: 1px solid grayBorder

    &-actions
        display: flex
        flex-direction: row
        justify-content: space-between
        margin-top: 8px

        &-buttons
            display: flex
            column-gap: 4px
            .button
                padding: 10px 20px
                border: unset
                margin: 0

    &-label
        font-weight: 500
        font-family: "Rubik"
        font-size: 15px
        line-height: 1.3
        color: baseColor
        padding-bottom: 12px

        &--hiddenOnMobile
            @media rwd.mobile
                display: none

    &-inputWrapper
        position relative
        display: flex
        flex-direction: column
        
    &-input
        background-color: transparent
        padding: 8px 12px
        outline: none
        border: none
        width: 100%
        max-width: 100%
        min-width: 100%
        box-sizing: border-box
        color: baseColor
        font-size: 13px
        font-family: "Rubik"
        transition: all 0.1s ease-out;
        height: 70px
        resize: none
        &--narrow
            height: 30px
            line-height: 1
        &--expanded
            height: 60px
            line-height: 1.3
    &-error
        font-size: 10px
        min-height: 2rem
        opacity: 0.5

    &-icons
        display: flex
        justify-content: flex-end
        position: absolute
        bottom: 8px
        right: 8px
    &-icon
        display: flex
        justify-content: center
        align-content: center
        flex-wrap: wrap
        line-height: 1.2
        color: baseColor
        cursor: default
        &:hover:not(.commentInput-icon--disabled)
            text-decoration: underline
            cursor: pointer
        &-text
            font-size: 13px
            margin: auto
            font-weight: 500
        &--disabled
            color: grey500
    &-attach
        display: inherit
        gap: 4px
        cursor: inherit
