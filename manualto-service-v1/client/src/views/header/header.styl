@import "../../vars.styl";
@import "../../queries.styl";

.logo
    font-size: 20pt
    text-decoration: none
    color: white
    font-weight: bold
    display: flex
    align-items: center
    justify-content: center
    &--no-padding
        padding-right: 0px
        padding-left: 0px
    @media tablet-less
        padding-left: 6px

    strong
        color: #000

.userWidget-container-username
    @media only screen and (min-width: 600px)
        padding-right: 8px


.containHeader
    .headerWrapper
        .search
            padding-left: 0px
            margin-right: 20px
    .logoWrapper
        max-height: 70px
        margin-right: 12px
        img
            max-width: 588px
            width: 100%

header
    overflow: hidden
    background: $$headerBgColor;
    color: $$headerFontColor;
    padding: 10px 10px 10px 12px;
    width: 100%;

    @media mobile
        padding: 10px 6px

    .controls
        display: flex
        width: 100%

        @media mobile
            width: calc(100% - 10px)

        @media tablet-plus
            width: calc(100% - 20px)

        align-items: center

    .logoWrapper
        display: flex
        align-items: center

        img
            height: 70px
            width: auto
    .usersettingsButton
        &:hover
            color: rgba(0, 0, 0, 0.5);

    .searchWrapper
        display: none
        visibility: hidden

    .logoutButton
        cursor: pointer
        @media tablet-less
            margin-right: 0
            margin-left: 5px
        @media only screen and (min-width: 800px)
            margin-left: 10px
            margin-right: 0
        &:hover
            color: rgba(0, 0, 0, 0.5);


    &.modal-header
        width: auto
        height: auto

    @media only screen and (min-width: 800px)
        height: 100px

        .controls
            >.search
                display: flex
                height: 70px
                align-items: center
                input
                    height: 50px
                    box-shadow: inset 0 0 0 1px $$headerFontColor

        .logoWrapper
            max-width: calc(50vw - 30px);
            max-height: 70px;

        .headerWrapper
            width: calc(100vw - 30px)
            display: flex
            align-items: center

            img
                padding-left: 15px
                padding-right: 15px

            .logo, .fa-home
                font-size: 2.8vw

            .controlsWrapper
                display: flex
                justify-content: flex-end
                height: 100%
                min-height: 50px
                min-width: 190px
                height: 70px
            .search
                padding-left: 15px

            .userWidget
                padding-left: 15px

    @media only screen and (max-width: 799px)
        height: 130px
        .headerWrapper
            width: 100%
            .controls
                justify-content: space-between;
                align-items: center;
                height: 50px;
                margin-bottom: 8px;
                .logo
                    max-width: 270px
                    font-size: 22px
                    overflow: hidden
                .logoutExtraPadding
                    padding-left: 0px
            .controls >.search
                display: none
                visibility: hidden

        .searchWrapper
            display: block
            visibility: visible

            @media mobile
                width: calc(100% - 10px)

            width: calc(100% - 20px)
            padding: 0px 0px 0px 5px

        .logoWrapper
            clear: both
            padding-top: 10px
            padding-bottom: 10px
            max-width: 80vw
            max-height: 50px
            img
                height: 70px
                max-width: 100%
                width: auto

        .controlsWrapper
            display: flex
            min-height: initial
            min-width: initial
        img
            max-width: 80vw
            max-height: 50px



    .controlsWrapper
        align-items: center

    .userWidget
        font-size: 20px
        padding-left: 10px

        @media tablet-less
            padding-right: 2px

        @media screen and (max-width: 420px)
            .fa-sign-in-alt
                padding-right: 0px

    .headerWrapper
        float: left
        height: 100%

    img
        cursor: pointer;

    .filters
        box-sizing: border-box;
        cursor: pointer
        font-size:110%;
        line-height:22px;
        padding-left: 10px;

        i.fa, svg
            fill: grayColor;
            vertical-align:middle;
            margin:0 10px;
            font-size: 18pt;

            &:hover
                color: rgba(0, 0, 0, 0.5);

    .active svg, .active i.fa
        fill:#5a544e;
        color: rgba(0, 0, 0, 0.8);

    .small
        font-size:80%;

    .search
        position:relative;
        flex-grow: 1;
        placeholder-color(grayColor)
        input[type="custom"]
            background: #fff;
            border: none;
            border-radius: 4px;
            width: 100%;
            line-height: 24px;
            padding: 12px 15px;
            font-size: 11pt;

            &:focus
                outline: none;
                transition: 150ms box-shadow ease-in-out;
                box-shadow: inset 0 0 0 1px rgba(0, 0, 0, 0.4), 1px 1px 3px 0 rgba(0, 0, 0, 0.25);

        button
            background:transparent;
            position:absolute;
            border:none;
            top: 0;
            right: 0;
            font-size: 15px;
            line-height: 1em;
            color: grayColor;
            height: 100%;
            padding: 0 10px;

            i.fa
                padding:0 7px;
                line-height:32px;
