@require "~@binders/ui-kit/lib/vars.styl";

.empty-account
    flex: 1
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
    width: 100vw

    p
        margin: 0
        padding: 0

    &-container
        display: flex
        flex-direction: column
        align-items: center
        justify-content: center
        gap: 24px
        background: white
        border-radius: 8px
        padding: 50px
        box-shadow: 0px 2px 4px 0px rgba(0, 0, 0, 0.05)

    &-icon
        width: 146px
        height: 146px
        border-radius: 100vw
        background: #FDE68A
        color: #F5B114
        padding: 16px
        display: flex
        align-items: center
        justify-content: center
        .material-icons
            font-size: 72px

    &-message
        display: flex
        flex-direction: column
        gap: 12px
    &-title
        font-weight: 500
        font-size: 20px
        line-height: 28px
        color: grey800
        text-align: center
    &-description
        font-weight: 400
        font-size: 16px
        line-height: 24px
        color: grey600
        text-align: center

    &-buttons
        display: flex
        flex-direction: row
        gap: 16px
        .button
            padding: 8px 16px
            color: black
            .material-icons
                font-size: 18px
                margin-left: 8px

