{
    "name": "@binders/devops-v1",
    "version": "1.0.0",
    "author": "Tom De Coninck",
    "license": "UNLICENSED",
    "scripts": {
        "cleanup": "rm -rf dist",
        "setup": "yarn install",
        "dev": "nodemon --watch src -L -e ts,json --exec \"npm run compile\"",
        "compile": "tsc --skipLibCheck && node --inspect=0.0.0.0:8516 dist/src/main.js",
        "transpile": "eslint --max-warnings=0 --ext .ts src && tsc --skipLibCheck",
        "lint": "eslint --max-warnings=0 --cache --ext .ts src",
        "start": "NODE_ENV=production node dist/src/main.js devops-v1",
        "componenttest": "jest --config=tests/component/jest.json",
        "unittest": "jest --config=tests/unit/jest.json",
        "integrationtest": "echo jest --config=tests/integration/jest.json",
        "dc": "node dist/src/dc/main.js",
        "dc:help": "tsup --help",
        "dc:build": "tsup --config src/dc/tsup.config.ts",
        "dc:dev": "tsup --watch --onSuccess \"node dist/src/dc/main.js\"",
        "dc:types": "node src/dc/esbuild.cjs && node dist/dc/build-docker-compose-spec.js"
    },
    "dependencies": {
        "@aws-sdk/client-acm": "^3.687.0",
        "@aws-sdk/client-cloudfront": "^3.690.0",
        "@azure/arm-network": "33.5.0",
        "@azure/identity": "4.2.1",
        "@azure/keyvault-secrets": "^4.1.0",
        "@binders/binders-service-common": "workspace:*",
        "@binders/client": "workspace:*",
        "@elastic/elasticsearch": "7.17.0",
        "@googleapis/sheets": "^4.0.2",
        "@kubernetes/client-node": "^1.2.0",
        "@microsoft/microsoft-graph-types": "^2.40.0",
        "bitbucket": "^2.12.0",
        "chalk": "^4.1.2",
        "child-process-promise": "^2.2.1",
        "commander": "^2.20.3",
        "date-fns": "2.30.0",
        "google-auth-library": "^8.7.0",
        "google-protobuf": "^3.13.0",
        "js-yaml": "^4.1.0",
        "launchdarkly-node-server-sdk": "^7.0.2",
        "moment": "^2.30.1",
        "mongodb": "4.17.2",
        "node-fetch": "2.7.0",
        "prom-client": "^11.5.3",
        "ramda": "~0.28.0",
        "string-argv": "0.0.2",
        "tcomb": "^3.2.29",
        "tcomb-validation": "^3.4.1",
        "uuid": "^9.0.0",
        "validator": "^13.6.0",
        "ws": "^8.18.2"
    },
    "devDependencies": {
        "@playwright/test": "1.53.1",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.14",
        "@types/js-yaml": "^4.0.9",
        "@types/node": "^22.15.3",
        "@types/node-fetch": "^2.6.12",
        "@types/ramda": "~0.28.23",
        "@types/redis": "^2.8.6",
        "@types/uuid": "^9.0.1",
        "concurrently": "^6.5.1",
        "esbuild": "~0.25.9",
        "eslint": "^7.25.0",
        "fs-extra": "^6.0.1",
        "jest": "^30.0.4",
        "jest-environment-jsdom": "^30.0.4",
        "jest-junit": "^16.0.0",
        "jest-util": "^30.0.2",
        "json-schema-to-typescript": "^15.0.4",
        "nodemon": "^2.0.7",
        "ts-jest": "^29.4.0",
        "ts-node": "^10.9.1",
        "tsup": "^8.5.0",
        "tsx": "^4.20.3",
        "typescript": "5.4.5"
    }
}
