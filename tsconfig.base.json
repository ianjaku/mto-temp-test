{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "declarationMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "preserveConstEnums": true,
        "paths": {
            "@binders/client/lib/*": ["binders-client-v1/lib/*"],
            "@binders/binders-service-common/lib/*": ["binders-service-common-v1/lib/*"],
            "@binders/ui-kit/lib/*": ["binders-ui-kit/lib/*"]
        },
        "target": "es2020",
        "skipLibCheck": true
    },
    "watchOptions": {
        "excludeFiles": [ "**/*.zip" ]
    }
}