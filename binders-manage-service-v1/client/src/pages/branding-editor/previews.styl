.preview {
    box-shadow: var(--shadow-md);
    border-radius: var(--radius-md);
    overflow: auto;
}

.preview-homepage
    width: 30em;
    height: 20em;
    display: grid;
    font-size: .75em;
    grid-template-rows: .2fr 1fr;

    .preview-navbar
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: var(--gap-lg);
        padding: var(--gap-md) var(--gap-lg);
        background-color: var(--clr-header-bg);

        .preview-logo
            display: grid;
            place-items: center;
            &, img
              height: 2em;
              max-height: 2em;
              max-width: 4em;
        .preview-search
            height: 1em;
            flex: 1;
            background-color: white;
            border: 1px solid var(--clr-header-text);
        .preview-menu
            color: var(--clr-header-text);
    .preview-body
        display: grid;
        grid-template-columns: 1fr 1fr;
        background-color: var(--clr-bg);
        padding: var(--gap-md);
        gap: var(--gap-md);

        .preview-card
            background-color: #ffffff;
            display: flex;
            flex-direction: row;
            gap: var(--gap-md);
            &-img
                background-color: var(--clr-neutral-300);
                aspect-ratio: 1;
            &-title
                flex: 1;
                display: flex;
                flex-direction: column;
                justify-content: center;
                color: var(--clr-text);

.preview-document
    width: 30em;
    height: 20em;
    font-size: .75em;
    position: relative;
    display: flex;
    flex-direction: row;

    .preview-popup
        display: flex;
        justify-content: center;
        background-color: var(--clr-header-bg);
        color: var(--clr-header-text);
        padding: var(--gap-md);
        position: absolute;
        top: 0;
        left: 0;
        right: 0;

    .preview-visual
        flex: 2;
        background-color: var(--clr-neutral-300);

    .preview-chunk
        flex: 1;
        display: flex;
        font-size: .75em;
        flex-direction: column;
        background-color: #ffffff;
        justify-content: center;
        align-items: flex-start;
        padding: var(--gap-md);

.preview-login
    width: 12em;
    height: 12em;
    display: flex;
    flex-direction: column;
    background-color: white;
    gap: .5em;
    padding: 2em;

    .preview-header
        span:nth-child(1)
            color: var(--clr-primary);
        span:nth-child(2)
            color: var(--clr-text);

    .preview-input
        background-color: var(--clr-neutral-200);
        height: 2em;

    .preview-button
        background-color: var(--clr-primary);
        color: #ffffff;
        height: 2em;
        text-align: center;
        line-height: 2em;

.preview-loading
    width: 12em;
    height: 12em;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: var(--clr-bg);
    color: var(--clr-text);
    gap: var(--gap-md);

    .loader
        width: 2em;
        height: 2em;
        background-color: var(--clr-primary);
        transform: rotate(45deg);
