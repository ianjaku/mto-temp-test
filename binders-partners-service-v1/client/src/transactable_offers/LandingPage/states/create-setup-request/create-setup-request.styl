@require "~@binders/ui-kit/lib/vars.styl";

.create-setup
  &-text
    padding: 0
    margin: 0
  
  &-form
    margin-top: 20px

  &-row
    padding: 5px 0

  &-label
    font-size: 0.875rem
    font-weight: 500

  &-input
    width: 100%
    &-error
      border: 1px solid colorError !important

  &-description
    font-size: 0.875rem
    opacity: 0.7
    line-height: 120%

  &-buttons
    display: flex
    flex-flow: row nowrap
    justify-content: flex-end
    margin-top: 15px
