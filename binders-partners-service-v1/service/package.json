{
    "name": "@binders/partners-v1",
    "version": "2.0.1",
    "license": "UNLICENSED",
    "scripts": {
        "cleanup": "rm -rf dist public",
        "setup": "yarn install --loglevel warn --ignore-engines",
        "start": "npm run start:webpack",
        "dev": "npm run dev:webpack",
        "dev:webpack": "nodemon --watch src -L -e ts,json --exec \"npm run compile\"",
        "compile": "tsc --skipLibCheck && node --inspect=0.0.0.0:8506 dist/src/main.js",
        "transpile": "npm run transpile:webpack",
        "transpile:webpack": "eslint --max-warnings=0 src && tsc --skipLibCheck",
        "start:webpack": "NODE_ENV=production node dist/src/main.js partners-v1",
        "lint": "eslint --max-warnings=0 --cache --ext .ts,.js,.jsx,.tsx src",
        "integrationtest": "echo jest --config=tests/integration/jest.json"
    },
    "dependencies": {
        "@binders/binders-service-common": "workspace:*",
        "@binders/client": "workspace:*"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.15.3",
        "@types/redis": "^2.8.6",
        "@types/validator": "^6.2.0",
        "concurrently": "^6.5.1",
        "eslint": "^7.25.0",
        "fs-extra": "^6.0.1",
        "jest": "^30.0.4",
        "jest-environment-jsdom": "^30.0.4",
        "jest-junit": "^16.0.0",
        "jest-util": "^30.0.2",
        "nodemon": "^2.0.7",
        "ts-jest": "^29.4.0",
        "tsx": "^4.20.3",
        "typescript": "5.4.5"
    }
}
