{
    "name": "@binders/authorization-v1",
    "version": "1.0.0",
    "author": "Tom De Coninck",
    "license": "UNLICENSED",
    "scripts": {
        "cleanup": "rm -rf dist",
        "setup": "yarn install --loglevel warn --ignore-engines",
        "dev": "nodemon --watch src -L -e ts,json --exec \"npm run compile\"",
        "dev:esbuild": "nodemon --watch src -L -e ts,json --exec \"npm run compile:esbuild\"",
        "compile": "tsc --skipLibCheck && node --inspect=0.0.0.0:8502 dist/src/main.js",
        "compile:esbuild": "node build.cjs && node --inspect=0.0.0.0:8502 dist/src/main.js",
        "transpile": "eslint --max-warnings=0 && tsc --skipLibCheck",
        "transpile:esbuild": "node build.cjs",
        "lint": "eslint --max-warnings=0 --cache --ext .ts,.js,.jsx,.tsx src",
        "start": "NODE_ENV=production node dist/src/main.js authorization-v1",
        "componenttest": "jest --config=tests/component/jest.json",
        "unittest": "jest --config=tests/unit/jest.json",
        "integrationtest": "echo jest --config=tests/integration/jest.json"
    },
    "dependencies": {
        "@binders/binders-service-common": "workspace:*",
        "@binders/client": "workspace:*",
        "commander": "^2.20.3",
        "http-status-codes": "^1.4.0",
        "mongoose": "^8.13.1",
        "ramda": "~0.28.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.15.3",
        "@types/ramda": "~0.28.23",
        "@types/redis": "^2.8.6",
        "concurrently": "^6.5.1",
        "esbuild": "~0.25.9",
        "eslint": "^7.25.0",
        "fs-extra": "^6.0.1",
        "jest": "^30.0.4",
        "jest-environment-jsdom": "^30.0.4",
        "jest-junit": "^16.0.0",
        "jest-util": "^30.0.2",
        "nodemon": "^2.0.7",
        "ts-jest": "^29.4.0",
        "tsx": "^4.20.3",
        "typescript": "5.4.5"
    }
}
