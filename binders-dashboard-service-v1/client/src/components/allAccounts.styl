@require "../../../../binders-ui-kit/src/vars.styl";

.all-accounts-modal

    &-body
        height: 50vh
        width: 40vw
        @media rwd.mobile
            height: 70vh
            width: 90vw
        display: flex
        flex-direction: column

        &-accounts
            overflow-y: auto
            padding: 12px 0px 12px 0px

            &-element
                display: flex
                padding: 12px 16px 12px 24px
                align-items: center

                &-thumbnail
                    width: 32px
                    height: 32px
                    border-radius: 100%
                    margin-right: 16px

                &--selectable:hover
                    background-color: accentHoverColor

                &--isSelected
                    background-color: accentColor

        .button
            width: 100px

        .input-wrapper
            width: 100%
            padding: 12px 16px 12px 24px

            .input-icon
                padding: 12px 16px 12px 24px
            input
                width: 100%

    .modal-header-title
        padding-left: 10px
