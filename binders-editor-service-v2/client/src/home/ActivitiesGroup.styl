@require "~@binders/ui-kit/lib/vars.styl";

.activities-group
    display: flex
    flex-direction: column
    padding: 10px

    &-name
        color: grey800
        line-height: 22px
        font-weight: 500
        font-size: 14px
        padding-left: 15px
        &::first-letter
            text-transform: capitalize

        @media rwd.mobile
            padding-left: 0