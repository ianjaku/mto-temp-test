@require "~@binders/ui-kit/lib/vars.styl"

.ai-optimize-binder-btn
    display: flex
    gap: 8px
    background: none
    color: black
    cursor: pointer
    border: none
    align-items: center
    align-self: center
    font-weight: bold
    border-radius: 6px
    padding: 6px 12px
    border: 1px solid grey400

    &:hover
        background: grey800
        color: white
        svg
            color: white

    &.disabled
        background: grey200
        color: grey600
        cursor: default
        svg
            animation: spinProgress 2s infinite
        &:hover
            span
                border: none

    svg
        color: grey800
        width: 1em
        height: 1em

    .loading
        display: flex
        align-items: center
        animation: spinProgress 2s infinite
        .material-icons
            font-size: 1em



@keyframes spinProgress
    0%
        transform: rotate(0deg)
    25%
        transform: rotate(90deg)
        animation-timing-function: cubic-bezier(0.5, 0.1, 0.8, 0.3)
    50%
        transform: rotate(180deg)
        animation-timing-function: cubic-bezier(0.6, 0.04, 0.98, 0.335)
    75%
        transform: rotate(270deg)
        animation-timing-function: cubic-bezier(0.22, 0.61, 0.36, 1)
    100%
        transform: rotate(360deg)
        animation-timing-function: ease-out
