@require "~@binders/ui-kit/lib/vars.styl";

.scheduled-notification
    &-wrapper
        background-color: backgroundColor
        margin-bottom: 10px
    &-header
        display: flex
        flex-flow: row nowrap
        justify-content: space-between
        align-items: center
        padding: 18px 26px
        border-bottom: 1px solid rgba(#000, 0.26)
    &-titlesection
        margin-right: 40px
    &-title
        font-size: 21px
        color: baseColor
        font-weight: 500
        display: flex
        flex-flow: row nowrap
        align-items: center
        margin-bottom: 5px
    &-email
        margin-right: 5px
        font-size: 18px
        opacity: 0.9
    &-subtitle
        display: flex
        flex-flow: row nowrap
        align-items: center
    &-tag
        background-color: white
        line-height: 1
        padding: 5px 10px
        border-radius: 5px
        color: baseColor
        margin-right: 10px
        display: none
        @media rwd.tabletAndAbove
            display: block
    &-date
        color: rgba(baseColor, 0.6)

    &-body
        display: flex
        flex-flow: row wrap
        align-items: flex-start
        justify-content: flex-start
        padding: 23px
        padding-bottom: 15px
    &-icon
        margin-right: 5px
        margin-top: -2px
    &-buttons
        display: none
        @media rwd.tabletAndAbove
            display: block


