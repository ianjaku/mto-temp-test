@require "~@binders/ui-kit/lib/vars.styl";

.MuiPopover-root
    z-index: 1400 !important // to make datepicker appear

.create-email-not
    &-modal
        min-width: 300px
    &-wrapper
        padding: 10px
        width: 90vw
        max-width: 90vw

        @media rwd.tabletAndAbove
            min-width: 500px
            width: auto
    &-row
        width: 100%
        margin-bottom: 20px
        &-inline
            display: flex
            align-items: center
            flex-flow: row wrap
            &--mr
                margin-right: 40px
                margin-bottom: 10px
                @media rwd.tabletAndAbove
                    margin-bottom: 0
    
    &-dropdown
        display: inline-block
        width: 80px
        &--long
            width: 160px
        .dropdown-field
            background-color: whiteColor !important
            padding-top: 0
            padding-bottom: 0
            &.is-disabled
                background-color: backgroundColor !important
            &-label
                height: 41.4px

    &-spacer
        padding: 0 5px

    &-quick-links
        display: flex
        flex-flow: row wrap
        margin-bottom: -10px
        margin-top: 3px
    
    &-quick-link
        margin-right: 10px;
        margin-bottom: 10px
        color: darkGrayColor
        font-size: 13px
        opacity: 0.5
        text-decoration: none
        cursor: pointer
        user-select: none
        &:hover
            opacity: 0.8

    &-label
        font-size: 14px
        font-weight: 500
        color: baseColor
        display: block
        margin-bottom: 3px
    &-input
        width: 100%
        font-family: defaultFontName
    &-targets
        position: relative
        z-index: 1
        .userInput
            .autocomplete
                &-textarea
                    padding: 12px
                    font-family: defaultFontName
                    min-height: 24px
                    color: baseColor
                    width: 100%
                    overflow: hidden
                .targetChip
                    border: 1px solid middleGreyColor
                    margin: 4px
    &-textarea
        font-family: defaultFontName
        width: 100%
        min-height: 200px
        padding: 12px;
        background-color: whiteColor;
        border: 1px solid middleGreyColor;
        font-size: 13px;
        color: baseColor;
        resize: vertical
        &:focus
            outline: none;
            border-color: accentColor;
            background-color: whiteColor;
            color: baseColor;
    &-help
        color: rgba(baseColor, 0.5)
        font-size: 12px
        text-decoration: none
        &:hover
            text-decoration: underline
    &-buttons
        display: flex
        align-items: center
        flex-flow: row nowrap
        justify-content: space-between
    &-link
        text-decoration: underline
        cursor: pointer
        color: baseColor
        font-size: 13px
        font-weight: 500
    &-item
        color: baseColor
    &-error
        width: 100%
        padding: 15px
        padding-right: 30px
        background-color: rgba(colorErrorDark, 0.1)
        border: 1px solid colorErrorDark
        box-sizing: border-box
        line-height: 1.3
        margin-bottom: 15px
        border-radius: 5px
        position: relative
        &-close
            position: absolute
            right: 15px
            top: 0
            height: 100%
            display: flex
            align-items: center
            cursor: pointer
    &-error-row
        color: colorErrorDark
        font-size: 12px;
        margin-top: 2px;

