@require "~@binders/ui-kit/lib/vars.styl";

.recipient-setting
    &-wrapper
        position: relative
        margin-bottom: 10px
        background-color: #F3F1EF
        width: 100%
        min-height: 70px
        display: grid
        grid-template-columns: 1fr
        row-gap: 10px
        align-items: center
        padding: 20px 30px
        padding-right: 40px
        box-sizing: border-box
        position: relative
        @media rwd.tabletAndAbove
            display: flex
            flex-flow: row nowrap
            padding: 0 30px
        &--disabled
            opacity: 0.5
            user-select: none
            &:hover
                opacity: 1
        &--empty
            opacity: 0.5
            &:hover
                opacity: 1
        &--duplicate
            outline: 1px solid colorErrorDark
        &:hover
            z-index: 100

    &-duplicate
        position: absolute
        right: 10px
        top: 5px
        color: colorErrorDark

    &-dropdown
        margin-right: 20px
        min-width: 135px

        &.borders
            .dropdown-field
                background-color: white
                padding: 10px 20px
                // text-transform: uppercase
    &-text
        margin-right: 20px

    &-remove
        padding-left: 10px
        padding-top: 5px
        cursor: pointer
        color: rgba(#000, 0.3)
        position: absolute;
        right: 20px;
        &:hover
            color: rgba(#000, 0.6)
        &:active
            color: rgba(#000, 0.9)    
    &-overlay
        display: none
        width: 100%
        height: 100%
        position: absolute
        top: 0
        left: 0
        background-color: rgba(#000, 0.8)
        align-items: center
        justify-content: center
        color: white
        font-weight: 500
        font-size: 1.125rem
        letter-spacing: 0.02em
        cursor: pointer
        text-decoration: none
    &-wrapper:hover .recipient-setting-overlay
        display: flex
    &-loading
        position: absolute
        width: 100%
        height: 100%
        left: 0
        top: 0
        background-color: rgba(#000, 0.8)
        z-index: 1
        display: flex
        flex-flow: row nowrap
        align-items: center
        justify-content: center
        color: white
        font-size: 18px
