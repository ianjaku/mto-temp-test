@require "~@binders/ui-kit/lib/vars.styl";

.inxtime
    &-wrapper
        position: relative
    &-dropdowns
        display: flex;
        flex-flow: row nowrap
        align-items: center
    &-preview
        position: absolute
        bottom: -15px
        font-size: 10px
        color: baseColor       
        opacity: 0.7
        height: 15px

    &-dropdown
        display: inline-block
        width: 80px
        margin-right: 6px
        &--long
            width: 160px
        .dropdown-field
            background-color: whiteColor !important
            padding-top: 0
            padding-bottom: 0
            &.is-disabled
                background-color: backgroundColor !important
            &-label
                height: 41px
