@require "~@binders/ui-kit/lib/vars.styl";

.bottomBar
    position: fixed
    bottom: 20px
    left: 50%
    transform: translateX(-50%)
    border-radius: 100vw
    border: 1px solid grey200
    box-shadow: 0px 2px 4px 0px #0000000D
    background: white
    display: flex
    flex-direction: row
    align-items: center
    padding: 8px 20px
    gap: 18px
    z-index: 10
    button
        border: none
        background: none
        width: 40px
        height: 40px
        color: grey900
        display: flex
        align-items: center
        justify-content: center
        .MuiIcon-root
            font-size: 26px

