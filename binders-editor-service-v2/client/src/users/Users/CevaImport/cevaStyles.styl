@require "~@binders/ui-kit/lib/vars.styl";

.ceva-wide {
    width: 80ch;
}

.import-users-overview .ceva-root {
    width: 100%; /* was 80ch; TBD with peter */
}

.ceva-root {
    --clr-neutral-800: #313131;
    --clr-neutral-700: #484744;
    --clr-neutral-600: #817F7A;
    --clr-neutral-400: #CDCCCA;
    --clr-neutral-100: #f3f1ef;
    --clr-primary-400: accentColor;
    --clr-red-200: colorErrorDark;
    --clr-white: #ffffff;

    --fw-bold: 700;
    --fs-sm: 12px;
    --fs-md: 14px;
    --gap-sm: 4px;
    --gap-md: 8px;
    --gap-lg: 12px;
    --gap-xl: 16px;

    .accordion-body {
        background-color: var(--clr-neutral-100);
    }

    .import-users-accordion-header {
        display: flex;
        flex-direction: row;
        justify-content: space-between;

        label {
            cursor: pointer;
            &:hover {
                text-decoration: underline;
            }
        }

        button {
            display: flex;
            flex-direction: row;
            border: none;
            background: none;
            gap: var(--gap-sm);
            font-weight: var(--fw-bold);
            color: var(--clr-neutral-600);
            cursor: pointer;

            &:hover {
                color: var(--clr-neutral-800);
            }
        }
    }

    .accordion-header {
        height: unset;
        padding: var(--gap-lg) var(--gap-md);
        line-height: 1.5rem;
    }

    .reset-password-dialog {
        display: flex;
        flex-direction: column;
        gap: var(--gap-md);

        p {
            margin: 0;
            color: var(--clr-neutral-600);
            font-size: var(--fs-sm);
        }

        input {
            -webkit-text-security: disc;
        }

    }

    .import-users-preview {
        .accordion.is-opened {
            margin: 0;
        }
    }

    .import-users-table {
        width: 100%;

        thead {
            text-transform: uppercase;
            color: var(--clr-neutral-700);
            font-weight: var(--fw-bold);
            text-align: left;
        }

        tr, thead {
            border-bottom: 1px solid var(--clr-neutral-400);
        }

        tr:last-child {
            border-bottom: none;
        }

        td, th {
            padding: var(--gap-md) var(--gap-lg);
        }

        td {
            word-break: break-word
        }

        td.actions {
            display: flex;
            flex-direction: row;
            gap: var(--gap-sm);

            button {
                background: none;
                border: none;
                cursor: pointer;
                color: var(--clr-neutral-700);

                &:hover {
                    color: var(--clr-primary-400);
                }
                &.danger:hover {
                    color: var(--clr-red-200);
                }
            }
        }

        th button {
          border: none;
          background: none;
          color: var(--clr-neutral-600);
          cursor: pointer;
          &:hover {
            color: var(--clr-neutral-800);
          }
        }
    }
}

.importCevaUsersBody {
    border: 1px solid borderGrayColor
    background-color white;
    .tabs-nav-list {
        padding: 0;
    }
    .tabs-content {
        width: 100% !important;
    }
    .tabs-item {
        padding: 0 var(--gap-xl) var(--gap-xl) var(--gap-xl)
        width: unset
    }
    &-search {
        flex-grow 1
        display flex
        justify-content flex-end
        align-items center
        padding-right var(--gap-lg)
    }
}

.ceva-user-form {
    display: flex;
    flex-direction: column;
    gap: var(--gap-sm);
    width: 100%;
}
