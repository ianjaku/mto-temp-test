@require "~@binders/ui-kit/lib/vars.styl"

.progress-bar-container
    width: 100%

    .progress-bar-track
        height: 10px
        border-radius: 5px
        overflow: hidden

    .progress-bar-fill
        width: 100%
        height: 100%
        background-color: accentColorLight3
        border-radius: 5px
        position: relative
        overflow: hidden
        .progress-bar-indicator
            position: absolute
            top: 0
            left: -50px
            width: 240px
            height: 100%
            background-color: accentColorLight2
            &--complete
                left: 0
                width: 100%
                background-color: accentColor
            &:not(.progress-bar-indicator--complete)
                animation: progress-indicator 2s linear infinite
            
@keyframes progress-indicator
    0%
        left: -50px
    100%
        left: 100%