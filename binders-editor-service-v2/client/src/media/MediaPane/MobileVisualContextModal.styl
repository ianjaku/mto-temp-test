@require "~@binders/ui-kit/lib/vars.styl"

.mobile-visual-context-modal
    .modal-dragHandle
        height: 24px // lowered height to not conflict with buttons
    &.modal-wrapper .modal
        background-color: grey800

    .modal-body
        padding: 30px 20px 15px
        background-color: grey800

    .mobile-visual-context-modal-body
        display: flex
        flex-direction: row
        justify-content: space-between
        align-items: center
        padding-bottom: 10px

        .mobile-visual-context-button
            display: flex
            flex-direction: column
            align-items: center
            justify-content: center
            gap: 12px
            width: auto
            height: auto
            padding: 0
            background: none
            border: none
            cursor: pointer
            color: #fff
            transition: all 0.2s ease

            .MuiIcon-root
                width: 56px
                height: 56px
                font-size: 30px
                display: flex
                align-items: center
                justify-content: center
                border-radius: 50%
                border: 1px solid white

            &--delete
                padding-left: calc(100vw / 8)
                .MuiIcon-root
                    color: red500

            &--settings
                padding-right: calc(100vw / 8)
                .MuiIcon-root
                    fill: #fff
