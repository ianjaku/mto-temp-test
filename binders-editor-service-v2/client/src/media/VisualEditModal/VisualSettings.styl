@require "~@binders/ui-kit/lib/vars.styl"

.visual-setting-scrollcontainer
    overflow: auto
    max-height: 100%
    width: 100%
.visual-settings
    display: flex
    flex-direction: column
    color: grey50
    row-gap: 10px
    padding: 10px 20px 20px 20px
    @media rwd.tabletAndAbove
        padding: 75px 50px 0 50px
        row-gap: 50px

    &-group
        display: flex
        flex-direction: column
        row-gap: 8px
        &-name
            font-size: 13px
            line-height: 18px
            font-weight: 500

.visual-setting
    display: flex
    align-items: center
    flex-direction: row-reverse
    justify-content: space-between
    &--forceLeftAlign
        flex-direction: row
        justify-content: flex-start
    @media rwd.tabletAndAbove
        flex-direction: row
        justify-content: flex-start
    column-gap: 8px
    font-size: 14px
    line-height: 22px
    font-weight: 400

    .visual-setting-dropdown
        color: grey600
        background-color: grey50
        width: 200px
        height: 40px
        border-radius: 4px
        align-content: center

        .dropdown-arrow-icon
            .material-icons
                color: grey800 !important

.visual-language-control-setting-info
    color: grey600
    font-size: 10px
    line-height: 16px
    font-weight: 400

.visual-bgcolor-setting-transparent-toggle
    display: flex
    column-gap: 8px

.visual-bgcolor-setting-colorpicker
    &-container
        display: flex
        align-items: center
        position: relative
        &__disabled
            &::after
                content: ""
                position: absolute
                inset: 0
                background-color: rgba(0, 0, 0, 0.5)
                cursor: not-allowed
    &-swatch
        width: 40px
        height: 40px
        border-radius: 4px
        cursor: pointer
        border 1px solid #bdbdbd

.rotation-buttons
    display: flex
    column-gap: 8px
    .rotation-button
        display: flex
        border: 1px solid grey500
        padding: 6px 14px
        border-radius: 4px
        color: grey50
        background-color: grey800
        &:hover
            cursor: pointer

.rc-color-picker-panel
    @media rwd.mobile
        position: fixed
        left: 50%
        transform: translateX(-50%)
        top: 20%
