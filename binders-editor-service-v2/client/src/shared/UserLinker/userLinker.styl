@require "~@binders/ui-kit/lib/vars.styl";

.userLinker
    position: relative
    &--tighterLayout
        .userLinker-section
            margin: 18px 0 8px 0
    &-section
        margin: 12px 0 24px
        &-title
            display block
            margin: 18px 0 12px
            font-weight: bold
            &--flex
                display: flex
        &-tooltip
            color: grey60
            font-size: fontSizeBase
            font-weight: normal
            .MuiIcon-root
                font-size: fontSizeBase
            .tooltip-button
                color: grey60
                display: flex
                &.active
                    &:hover
                        color: grey800
        .autocomplete
            &-prompt
                z-index: 1
    &-loadingBlanket
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        background-color: whiteColor
        opacity: 0.5
        z-index: 1
        display: flex
        align-items: center
        justify-content: center
    .userLinkerAdd-userInput
        .userInput
            flex-grow: 1
        &-btns
            display flex
            justify-content flex-end
            height fit-content
        &:not(.userLinkerAdd-userInput--inlineAddBtn)
            margin-top 24px
            .button
                margin-left 12px
        &--inlineAddBtn
            display: flex
            .userInput
                margin-right: 10px
    .userLinkerListTitleCount
        color: disabledColor
        font-weight: 400
        margin-left: 8px
    .userLinkerListHeader
        display flex
        align-items: center
        justify-content space-between
        &-input
            flex-grow: 0.5
            padding: 10px
        &-sort
            display: flex
            align-items: center
            &-lbl
                color: disabledColor
    .userLinkerListRows
        &-row
            display flex
            justify-content space-between
            label
                display flex
                align-items center
            &-tail-unlinkBtn
                width 16px
                color grey500
                cursor pointer
                display flex
                align-items center
    .userLinkerListCards
        display: flex
        flex-wrap: wrap
        margin-top: 16px
        overflow-y auto
        max-height: 195px
        &-card
            background-color: backgroundColor
            width: calc(33.33% - 10px)
            margin: 0 10px 10px 0
            padding: 10px
            position: relative
            border-radius: 4px
            cursor: pointer
            min-height: 50px
            display flex
            flex-direction column
            justify-content center
            &__fullWidth
                width: initial
                .userLinkerListCards-card-lbl
                    margin-right: 32px
            &-lbl
                max-width: 100%
                overflow: hidden
                text-overflow: ellipsis
                white-space: nowrap
                display flex
                align-items center
                &-icon
                    margin-right 4px
                    padding-top 4px
            &-primLbl
                font-size: 13px
            &-secondLbl
                font-size: 12px
                color: middleGreyColor3
            &-alignEnd
                position: absolute
                top: calc(50% - 10px)
                right: 10px
            &-unlinkBtn
                color: middleGreyColor3
                display: none
                .material-icons
                    font-size: 1.25em
            &:hover
                background-color: backgroundColorWeeDarker
                .userLinkerListCards-card
                    &-unlinkBtn
                        display: block
                    &-lbl
                        max-width: 90%


