@require "~@binders/ui-kit/lib/vars.styl";
@require "./vars.styl";

.inheritedSettingsNavigator
    position relative
    &-back
        position absolute
        top 20px
        right 20px
        color grey60
        display flex
        align-items center
        font-size .9em
        &:hover
            text-decoration underline
        *
            cursor pointer
        .material-icons
            font-size 14px
            margin-right 4px
            position relative
            top 3px
    &-loading
        width 100%
        padding 28px
        display flex
        align-items center
        justify-content center
        height 220px
    .inheritedSettingsSection
        padding-top 20px
        padding-bottom 20px
        border: 0
        background-color: transparent
        border-top: 1px solid borderGrayColor
        border-bottom: 1px solid borderGrayColor
        &-settingWrapper
            padding-left inheritedSettingSectionLeftPadding
            padding-right inheritedSettingSectionRightPadding
        &:not(:last-child)
            border-bottom 1px solid grey200
        &--isActive
            background-color: backgroundColor
        &-header
            padding 0 18px
    &-radiobuttonWrapper
        display flex
        justify-content space-between
    &-titleLink
        font-weight 500
        text-decoration none
        color initial
        display flex
        align-items center
        .material-icons
            font-size 16px
            margin-right 4px
            color darkGreyColor
        &:hover
            text-decoration underline
