@require "~@binders/ui-kit/lib/vars.styl";

.collectionLink
    color: grey60
    background-color: grey400
    display: flex
    align-items: center
    font-size: .9em
    gap: 8px
    padding: 4px 12px
    border-radius: 100vw
    cursor: pointer
    &:hover
        text-decoration: underline
    .material-icons
        font-size: 14px
        line-height: 1
    &--disabledNav
        cursor: default
        &:hover
            text-decoration: none
        &-blocked
            cursor: not-allowed
    &-label
        cursor: inherit