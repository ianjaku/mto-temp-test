 @require "~@binders/ui-kit/lib/vars.styl";

.chunkCommentsPreview
    width: 100%
    border-top: 1px solid #F3F1EF;
    color: baseColor
    padding: 12px 16px
    display: flex
    align-items: center
    &:hover
        background-color: backgroundColor
        cursor: pointer
    
    &-icon
        margin-right: 4px   
        font-size: 15px
    &-unresolved
        font-weight: 600
        margin-left: 4px
        
// We use an inset box shadow to show when a chunk is active
// These spacing changes are to prevent the hover effect & border from overlapping with the inset box shadow
.chunkNEW-text.isActive .chunkCommentsPreview
    margin: 0 3px 3px;
    padding: 12px 13px 9px 13px
    width: calc(100% - 6px)

