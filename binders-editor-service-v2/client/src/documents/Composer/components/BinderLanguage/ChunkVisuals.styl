@require "~@binders/ui-kit/lib/vars.styl";

.chunk-images
    &-dropzone
        background-color: #e9e8e6
        *
            background-color: #e9e8e6
    &-snapshotIsDraggingOver
        .chunk-images
            &-dropzone
                background-color: accentColor
                .thumbnail-wrapper,.thumbnail
                    background-color: accentColor
            &-placeholderWrapper
                background-color: accentColor
            &-thumbnail
                background-color: accentColor
    &-arrow
        display: flex
        align-items: center
        .minimal-arrow
            margin: 3px
            color: disabledColor