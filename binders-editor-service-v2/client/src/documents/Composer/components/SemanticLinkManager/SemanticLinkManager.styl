@require "~@binders/ui-kit/lib/vars.styl";
@require "~@binders/ui-kit/lib/elements/drawer/drawer.styl";

.semanticLinkManager
    .MuiFormControlLabel-label
        color: disabledColor
    &-set
        padding: 8px 0
        border-top: 1px solid colorNegativeBorder
        position: relative
        &:last-of-type
            border-bottom: 1px solid colorNegativeBorder
        .button-add-semanticLink
            position: absolute
            bottom: -12px
            left: calc((100% / 2) - 12px)
            z-index: 2
            span
                color: black !important
    &-row
        display: flex
        align-items: center
        min-height: 40px
        &-langCode
            min-width: 24px
            flex-grow: 0
            margin: 0 2px 0 0
            .languagecode-circle
                margin: 0
        &-body
            flex-grow: 1
            display: flex
            align-items: center
            margin-left: 4px
            color: disabledColor
            min-width: 0
            .MuiIcon-root
                width: 12px
                height: 12px
                font-size: 12px
        &-rightctrl
            flex-grow: 0
            display: flex
            justify-content: center
            align-items: center
            *
                width: 20px
            button
                padding: 8px 12px
        .contextMenu-icon
            color: whiteColor
        .semanticLinkManagerInput
            display: flex
            align-items: flex-end
            position: relative
            width: 100%
            &-clickable
                cursor: pointer
                max-width: 200px
                overflow-x: hidden
                text-overflow: ellipsis
                white-space: nowrap
            &-tooltip
                user-select: none
                pointer-events: none
                position: absolute
                top: calc(100% + 3px)
                background-color: lighten(baseColor, 30%)
                box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2)
                border-radius: 5px
                line-height: 1.3
                padding: 7px 10px 8px
                z-index: 3
                animation: SemanticTooltipFade 2.5s ease-in-out forwards
                font-family: defaultFontName
                font-size: 11px
                font-weight: 500
                color: white

            &-txt,&-lbl
                background: transparent
                border: 0
                color: disabledColor
                overflow: hidden
                font-size: 1em
            &-txt
                min-width: 160px
                flex-grow: .5
                &--isNewInput
                    color: accentColor !important
                &:focus
                    color: accentColor
                    border: 0
                    outline: 1px solid accentHoverColor
                &:hover
                    outline: 1px solid accentHoverColor
            &-lbl
                max-width: 160px
                text-overflow: ellipsis
                white-space: nowrap
        &--accented
            .semanticLinkManagerInput
                &-txt,&-lbl
                    color: whiteColor
    &--lightTheme
        .languagecode-circle
            border-color: black
        .contextMenu-icon
            color: middleBlackColor
        & ^[0]-row--accented
            .semanticLinkManagerInput-lbl
                color: black

@keyframes SemanticTooltipFade {
    0% {
        opacity: 0
    }
    10% {
        opacity: 1
    }
    90% {
        opacity: 1
    }
    100% {
        opacity: 0
    }
}