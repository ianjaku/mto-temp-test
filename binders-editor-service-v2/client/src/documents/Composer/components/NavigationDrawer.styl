@require "~@binders/ui-kit/lib/vars.styl";

.composer-panes
    &-media
        display: flex
        flex-direction: column
        .drawer-container
            &-body
                display: flex
                flex-direction: column
                overflow-y: auto
                .media-pane
                    display: flex
                    flex-direction: column
                    flex-grow: 1
                    overflow: hidden
    &-languageIcon
        cursor: pointer
        height: 40px
        width: 40px
        display: flex
        justify-content: center
        align-items: center
        &--disabled
            cursor: default
            color: disabledColor
        &:hover
            color: accentColor
.empty-share-pane
    p
        padding-top: 32px
        font-style italic

.add-languages
    &-contextmenu
        position: initial !important
        .MuiPaper-root
            z-index: 20
            width: 236px
    &-dropdown
        position: fixed
        top: 80px
        right: 40px
        width: 236px
        z-index: 1500

        .dropdown-elements
            .dropdown-field-label
                justify-content: flex-end
.history-drawer
    .drawer-container
        padding: 32px 9px !important
        &-body
            height: calc(100% - 12px)
            overflow-y: auto
            padding-right: 5px
