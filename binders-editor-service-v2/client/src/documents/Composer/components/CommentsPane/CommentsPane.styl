@require "~@binders/ui-kit/lib/vars.styl"
@import "./vars.styl"

.pane-comments
    createCssVariables()

    --size-tabs-border-width: 1px

    position: relative
    padding: var(--gap-sm)

    &-refresh {
        position: absolute
        top: 0px
        right: 6px
        padding: 6px
    }

    .tabs
        .tabs-nav
            height: unset
            border-bottom: unset
            .tabs-nav-list
                width: unset
                padding: unset
                margin: unset
                .tabs-item
                    width: unset
                    .tabs-title
                        border-bottom: unset
                        padding: unset
                    .tabs-title
                        color: unset
        .tabs-content
            padding: unset
            margin: unset
            width: unset
            background-color: unset

    .tabs
        .tabs-nav
            border-bottom: var(--size-tabs-border-width) solid var(--clr-neutral-300)
        .tabs-item
            padding: 0 var(--gap-lg) var(--gap-sm) var(--gap-lg)
            font-weight: var(--font-weight-bold)
            border-bottom: none
            position: relative
            &:after
                content: ''
                position: absolute
                left: 0
                right: 0
                bottom: calc(-1 * var(--size-tabs-border-width))
            &.active
                color: var(--clr-primary)
                &:after
                    border-bottom: var(--size-tabs-border-width) solid var(--clr-primary)

    .comment-threads-list
        display: flex
        flex-direction: column
        gap: var(--gap-md)
        padding-top: var(--gap-md)

    .comments-empty
        display: flex
        flex-direction: column
        gap: var(--gap-lg)
        &-graphic
            display: flex
            flex-direction: column
            align-items: center
            justify-content: center
            gap: var(--gap-lg)
        &-icon
            font-size: 128px
            color: var(--clr-neutral-600)

    .comments-no-chunk-selected
        display: flex
        flex-direction: column
        align-items: center
        justify-content: center
        gap: 64px
        padding-top: 32px
        .chunk-mockup
            display: flex
            flex-direction: row
            position: relative
            img
                width: 48px
                background-color: var(--clr-neutral-600)
            .chunk-mockup-body
                border: 1px solid var(--clr-neutral-600)
                width: 40ch
                display: flex
                flex-direction: column
                padding: var(--gap-sm)
                gap: var(--gap-sm)
                span
                    width: 80%
                    height: .75rem
                    background-color: var(--clr-neutral-700)
            .fa
                position: absolute
                top: 50%
                left: 33%
                font-size: 64px
                color: var(--clr-neutral-600)
