@require "~@binders/ui-kit/lib/vars.styl"
@import "./vars.styl"

.comments-new-thread
    createCssVariables()

    display: flex
    flex-direction: column
    justify-content: center
    min-height: 5.5rem

    &-container
        position: relative
        display: flex
        flex-direction: column
        justify-content: center
        gap: var(--gap-md)

    .new-thread-btn
        position: absolute
        width: 100%
        display: flex
        flex-direction: row
        align-items: center
        gap: var(--gap-md)
        font-family: var(--font-body)
        font-weight: var(--font-weight-bold)
        padding: var(--gap-md)
        padding-left: calc(var(--gap-md) + var(--gap-sm))
        background-color: var(--clr-neutral-700)
        color: var(--clr-neutral-200)
        border: 1px solid transparent
        transition: all 150ms ease-in
        cursor: pointer
        .material-icons
            transition: all 150ms ease-in
            transform: scale(1)
        &:hover
            background-color: var(--clr-neutral-650)
            color: var(--clr-primary)
            box-shadow: rgba(0,0,0,0.1) 0px 4px 6px -1px, var(--clr-neutral-700) 0px 2px 4px -1px
            .material-icons
                transform: scale(1.2)

    .new-thread-form
        width: 100%
        display: flex
        flex-direction: row
        align-items: flex-start
        padding: var(--gap-md) 0
        padding-left: calc(var(--gap-md) + var(--gap-sm))
        gap: var(--gap-sm)
        textarea
            resize: vertical

    .new-thread-close
        border: none
        background: none
        cursor: pointer
        color: white
        margin: 0
        margin-top: var(--gap-sm)
        padding: var(--gap-sm)
        display: flex
        align-items: center
        justify-content: center
        aspect-ratio: 1
        &:hover
            background: var(--clr-neutral-700)
