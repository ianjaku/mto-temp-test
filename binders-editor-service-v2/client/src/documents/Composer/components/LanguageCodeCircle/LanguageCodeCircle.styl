@require "~@binders/ui-kit/lib/vars.styl";

.languagecode-circle
    display: flex
    justify-content: center
    align-items: center
    flex-direction: column
    margin: 0 8px 0 2px
    width: 24px
    min-width: 24px
    height: 24px
    border-radius: 50%
    border: 1px solid transparent
    background-color: whiteColor
    text-align: center
    color: baseColor
    font-family: Rubik
    font-size: 9px
    font-weight: bold
    font-style: normal
    font-stretch: normal
    letter-spacing: normal
    &--is-master
        box-shadow: 0px 0px 0px 2px accentColor
    &-text
        cursor: pointer
        &--primary
            display: inline-block
            width: 100%
            vertical-align: middle
            text-align: center
            text-transform: uppercase
        &--secondary
            font-weight: 400
            cursor: pointer
