{
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "moduleDirectories": [
        "node_modules",
        "src",
        "/usr/local/lib/node_modules",
        "/usr/lib/node_modules"
    ],
    "testMatch": [
        "**/tests/unit/**/*.[jt]s?(x)",
        "**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "setupFilesAfterEnv": [
        "../setupTests.ts"
    ],
    "extensionsToTreatAsEsm": [
        ".styl",
        ".ts"
    ],
    "transform": {
        "\\.styl$": "../stylusTransformer.js",
        "^.+\\.ts$": [
            "ts-jest",
            {
                "useESM": true
            }
        ]
    }
}
